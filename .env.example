# Copy this file to .env.local and configure:
#   cp .env.example .env.local

# Database location (required)
# The directory must exist and be writable
DATABASE_PATH=/path/to/your/app.db

# Session secret - minimum 32 characters (required)
# Generate with: openssl rand -base64 32
SESSION_SECRET=

# Session timeouts (optional, shown values are defaults)
# SESSION_IDLE_TIMEOUT_MINUTES=30
# SESSION_ABSOLUTE_TIMEOUT_HOURS=8

# WebAuthn Relying Party configuration (optional for localhost development)
# WEBAUTHN_RP_ID=localhost
# WEBAUTHN_RP_NAME=FIDO2 Blueprint
# WEBAUTHN_ORIGIN=http://localhost:3000
